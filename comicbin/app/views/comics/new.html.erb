<div class='container'>
	<h2>Add a new comic</h2>
</div>

<div class='container'>
	<div class='row'>
		<div class="col-md-6">
			<form action="/comics/new_commit">
				<div class="form-group">
					<label for="title">Title:</label>
					<input type="text" name="title" class="form-control" id="title" placeholder="Enter comic title here">
				</div>
				<div class="form-group">
					<label for="description">Description:</label>
					<input type="text" name="description" class="form-control" id="title" placeholder="Enter a description of the comic here">
				</div>
				<div class="form-group">
					<label for="image">Cover image URL:</label>
					<input type="text" name="image" class="form-control" id="year" placeholder="Enter a URL for a cover image here">
				</div>
				<button type="submit" class="btn btn-default">Submit</button>
			</form>
		</div>
	</div>
</div>

<div class='container'>
	<br><%= link_to 'Back to all comics', comics_path %>
</div>
